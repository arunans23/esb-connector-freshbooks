<component name="freshbooks-invoice" type="synapse/template">
   <subComponents>
      <component name="createInvoice">
         <file>createInvoice.xml</file>
         <description>Create a new invoice complete with line items.</description>
      </component>
      <component name="updateInvoice">
         <file>updateInvoice.xml</file>
         <description>Update an existing invoice.</description>
      </component>
      <component name="getInvoice">
         <file>getInvoice.xml</file>
         <description>Return the complete invoice details.</description>
      </component>
      <component name="deleteInvoice">
         <file>deleteInvoice.xml</file>
         <description>Delete an existing invoice.</description>
      </component>
      <component name="listInvoices">
         <file>listInvoices.xml</file>
         <description>Returns a list of invoice summaries.</description>
      </component>
      <component name="sendInvoiceByEmail">
         <file>sendInvoiceByEmail.xml</file>
         <description>Send an existing invoice to your client via e-mail.</description>
      </component>
      <component name="addInvoiceLine">
         <file>addInvoiceLine.xml</file>
         <description>Add one or more lines to an existing invoice.</description>
      </component>
      <component name="deleteInvoiceLine">
         <file>deleteInvoiceLine.xml</file>
         <description>Deletes a single line from an existing invoice.</description>
      </component>
      <component name="updateInvoiceLine">
         <file>updateInvoiceLine.xml</file>
         <description>Update one or more existing lines on an existing invoice.</description>
      </component>
   </subComponents>
</component>