<component name="freshbooks-estimate" type="synapse/template">
   <subComponents>
      <component name="createEstimate">
         <file>createEstimate.xml</file>
         <description>Create a new estimate.</description>
      </component>
      <component name="updateEstimate">
         <file>updateEstimate.xml</file>
         <description>Update an existing estimate.</description>
      </component>
      <component name="getEstimate">
         <file>getEstimate.xml</file>
         <description>Retrieve an existing estimate.</description>
      </component>
      <component name="deleteEstimate">
         <file>deleteEstimate.xml</file>
         <description>Delete an existing estimate.</description>
      </component>
      <component name="listEstimates">
         <file>listEstimates.xml</file>
         <description>Returns a list of estimates.</description>
      </component>
      <component name="sendEstimateByEmail">
         <file>sendEstimateByEmail.xml</file>
         <description>Send an estimate to the associated client via e-mail.</description>
      </component>
   </subComponents>
</component>